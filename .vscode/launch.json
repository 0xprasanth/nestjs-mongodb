{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug NestJS (Start:Dev)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "start:debug"],
      "console": "integratedTerminal",
      "restart": true,
      //   "protocol": "inspector",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "name": "Attach to NestJS",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      //   "protocol": "inspector",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    }
  ]
}
